<%

function getIngredientsArray(pizza) {
    //Отримує вміст піци
    var content = pizza.content;
    var result = [];

    //Object.keys повертає масив ключів в об’єкті JavaScript

    Object.keys(content).forEach(function(key){

        //a.concat(b) створює спільний масив із масивів a та b
        result = result.concat(content[key]);
    });

    return result;
}
%>

<%function getPizzaColumn(pizza){
    if(pizza.big_size&&pizza.small_size){
        return "col-sm-6";
    }else {
        return "col-sm-12";
    }
}%>

<div class="col-md-6 col-lg-4 pizza-card">
    <div class="thumbnail">
        <img class="pizza-icon" src="<%= pizza.icon %>" alt="Pizza">

        <% if(pizza.is_new) { %>
        <span class="label label-danger announce">Нова</span>
        <% } else if(pizza.is_popular) {%>
        <span class="label label-success announce">Популярна</span>
        <% } %>

        <div class="caption">

            <h3><%= pizza.title %></h3>
            <span class="description"><%= pizza.type %></span>
            <p>
                <%= getIngredientsArray(pizza).join(", ") %>
            </p>
            <div class="row pizza-inf">
                <% if(pizza.small_size){ %>
                <div class="<%= getPizzaColumn(pizza)%>">
                    <div class="size">
                        <img src="assets/images/size-icon.svg">
                        <span><%= pizza.small_size.size%></span>
                    </div>
                    <div class="weight">
                        <img src="assets/images/weight.svg">
                        <span><%= pizza.small_size.weight%></span>
                    </div>

                    <h3 class="price"><%= pizza.small_size.price%></h3>
                    <span class="grn">грн</span>
                    <button class="btn btn-warning buy-small">Купити</button>
                </div>
                <%}%>
                <% if(pizza.big_size){%>
                <div class="<%= getPizzaColumn(pizza)%>">
                    <div class="size">
                        <img src="assets/images/size-icon.svg">
                        <span><%= pizza.big_size.size%></span>
                    </div>
                    <div class="weight">
                        <img src="assets/images/weight.svg">
                        <span><%= pizza.big_size.weight%></span>
                    </div>

                    <h3 class="price"><%= pizza.big_size.price%></h3>
                    <span class="grn">грн</span>
                    <button class="btn btn-warning buy-big">Купити</button>
                </div>
                <%}%>
            </div>
        </div>

    </div>
</div>